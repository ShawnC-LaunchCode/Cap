@model List<Zebra>
<h1> User List</h1>

@if (Model.Count == 0)
{
    <h1> No users! You shouldn't be here either.</h1>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Bank</th>
            
        </tr>
        @foreach(var zebra in Model)
        {
            <tr>
                <td>@zebra.Username</td>
                <td>@zebra.Bank</td>
                <td><a asp-controller="User" asp-action="Edit" asp-route-zebraId="@zebra.Id">Edit This User</a></td>
            </tr>
        }
    </table>
}